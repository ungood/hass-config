{#
  AQI Calculation Macro
  Converts PM2.5 concentration (μg/m³) to Air Quality Index using EPA standard

  Usage in template sensors:
    {% from 'aqi.jinja' import pm25_to_aqi %}
    {{ pm25_to_aqi('sensor.main_floor_air_sensor_pm2_5') }}
#}

{% macro pm25_to_aqi(pm25_sensor) -%}
  {%- set pm25 = states(pm25_sensor) | float(0) -%}
  {%- if pm25 <= 12.0 -%}
    {{ ((50 / 12.0) * pm25) | round(0) }}
  {%- elif pm25 <= 35.4 -%}
    {{ (((100 - 51) / (35.4 - 12.1)) * (pm25 - 12.1) + 51) | round(0) }}
  {%- elif pm25 <= 55.4 -%}
    {{ (((150 - 101) / (55.4 - 35.5)) * (pm25 - 35.5) + 101) | round(0) }}
  {%- elif pm25 <= 150.4 -%}
    {{ (((200 - 151) / (150.4 - 55.5)) * (pm25 - 55.5) + 151) | round(0) }}
  {%- elif pm25 <= 250.4 -%}
    {{ (((300 - 201) / (250.4 - 150.5)) * (pm25 - 150.5) + 201) | round(0) }}
  {%- elif pm25 <= 350.4 -%}
    {{ (((400 - 301) / (350.4 - 250.5)) * (pm25 - 250.5) + 301) | round(0) }}
  {%- elif pm25 <= 500.4 -%}
    {{ (((500 - 401) / (500.4 - 350.5)) * (pm25 - 350.5) + 401) | round(0) }}
  {%- else -%}
    500
  {%- endif -%}
{%- endmacro %}
